<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textViewFragmentNotificationsReceived"
        android:layout_margin ="16dp"
        android:text="@string/msg_no_fragment_notification_received"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/buttonSendToFragment"
        android:layout_marginTop="16dp"
        android:text="@string/label_send_fragment_notification_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonSendToFragmentTwo"
        android:layout_marginTop="16dp"
        android:text="@string/label_send_fragment_notification_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonSendToFragmentBoth"
        android:layout_marginTop="16dp"
        android:text="@string/label_send_fragment_notification_both"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="#10000000"
        android:text="@string/label_fragment_one"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
    android:background="#10000000"
    android:id="@+id/frameLayoutPanel"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"/>
    <TextView
        android:background="#20000000"
        android:text="@string/label_fragment_two"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:background="#20000000"
        android:id="@+id/frameLayoutPanelTwo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>

</android.support.constraint.ConstraintLayout>